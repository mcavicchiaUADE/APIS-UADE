      "name": "🏠 PRODUCTOS",
      "item": [
        {
          "name": "Obtener todos los productos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos"]
            },
            "description": "Obtiene todos los productos disponibles con sus categorías y usuarios propietarios"
          }
        },
        {
          "name": "Obtener producto por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            },
            "description": "Obtiene un producto específico por su ID"
          }
        },
        {
          "name": "Crear nuevo producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Nuevo Producto Test\",\n    \"description\": \"Descripción del nuevo producto\",\n    \"price\": 99.99,\n    \"stock\": 10,\n    \"images\": [\"https://example.com/image.jpg\"],\n    \"categoriaId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/productos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos"]
            },
            "description": "Crea un nuevo producto (requiere autenticación)"
          }
        },
        {
          "name": "Actualizar producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Producto Actualizado\",\n    \"description\": \"Descripción actualizada\",\n    \"price\": 149.99,\n    \"stock\": 15,\n    \"images\": [\"https://example.com/updated-image.jpg\"],\n    \"categoriaId\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            },
            "description": "Actualiza un producto existente (requiere autenticación)"
          }
        },
        {
          "name": "Eliminar producto",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            },
            "description": "Elimina un producto (requiere autenticación)"
          }
        },
        {
          "name": "Buscar productos por nombre",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/buscar?nombre=iPhone",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "buscar"],
              "query": [
                {
                  "key": "nombre",
                  "value": "iPhone",
                  "description": "Término de búsqueda"
                }
              ]
            },
            "description": "Busca productos por nombre (búsqueda parcial)"
          }
        },
